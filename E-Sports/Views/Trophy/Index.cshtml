@model IEnumerable<Trophys>
@{
    ViewData["Title"] = "Index";
}

<div class=container p-3">
    <div class="row-pt-4">
        <div class="col-6">
            <h2 class="text-primary">Trophies List</h2>
        </div>
        <div class="col-12 text-end">
            <a asp-action="Create" asp-controller="Trophy" class="btn btn-success">
                <i class="bi bi-plus-square">
                </i> &nbsp; Add New Trophy
            </a>
        </div>
    </div>
</div>
<br />
<br />
<table class="table table-hover">
    <thead>

        <tr class="table-primary">
            <th scope="col">Name</th>
            <th scope="col">Description</th>
            <th scope="col">Start Date</th>
            <th scope="col">End Date</th>
          
            <th scope="col">Actions</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.StartDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EndDate)
                </td>
  
                <td>
                    <div class="w-75 btn-group" role="group">
                        <a asp-controller="Trophy" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-info mx-2">
                            <i class="bi bi-pencil-square"> </i>Edit
                        </a>
                        <a asp-controller="Trophy" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger mx-2">
                            <i class="bi bi-trash-fill"> </i>Delete
                        </a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>


