@model IEnumerable<Players>
@{
    ViewData["Title"] = "Index";
}

<div class =container p-3"> 
    <div class="row-pt-4"> 
        <div class="col-6"> 
          <h2 class="text-primary">Players List</h2>
        </div>
        <div class="col-12 text-end">
            <a asp-action="Create" asp-controller="Players" class="btn btn-success"> <i class="bi bi-plus-square">
            </i> &nbsp; Add New Player</a>
        </div>
    </div>
    </div>
   <br /> <br />
<table class="table table-hover">
        <thead>

            <tr class="table-primary">
                <th scope="col">First Name</th>
                <th scope="col">Last Name</th>
                <th scope="col">Age</th>
                <th scope="col">Base Price</th>
                <th scope="col">Category</th>
                <th scope="col">Actions</th>
                <th></th>
            </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
                <tr>
                    <td>
                    @Html.DisplayFor(modelItem => item.FisrtName)
                    </td>
                    <td>
                    @Html.DisplayFor(modelItem => item.LastName)
                    </td>
                    <td>
                    @Html.DisplayFor(modelItem => item.Age)
                    </td>
                    <td>
                    @Html.DisplayFor(modelItem => item.Baseprice)
                    </td>
                    <td>
                    @Html.DisplayFor(modelItem => item.Category)
                    </td>
                    <td>
                        <div class="w-75 btn-group" role="group">
                        <a asp-controller="Players" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-info mx-2"> 
                            <i class="bi bi-pencil-square"> </i>Edit</a>
                        <a asp-controller="Players" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger mx-2">
                            <i class="bi bi-trash-fill"> </i>Delete
                        </a>
                        </div>
                    </td>
                </tr>
        }
    </tbody>
</table>



