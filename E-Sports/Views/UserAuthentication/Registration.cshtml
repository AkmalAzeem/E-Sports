@model Registration
@{
    ViewData["Title"] = "Registration";
}

<div class="container">
    <div class="row">
        <div class="col-md-6">
            <form asp-action="Registration" method="post">
                <h3>Registration</h3>
        <div class="form-group">
            <label class="col-form-label mt-4" asp-for="Name"></label>
            <input type="text" class="form-control" placeholder="Full Name" asp-for="Name" id="Name">
            <span class="text-danger" asp-validation-for="Name"></span>
        </div>

        <div class="form-group">
            <label class="col-form-label mt-4" asp-for="Email"></label>
            <input type="email" class="form-control" placeholder="E-mail" asp-for="Email" id="Email">
            <span class="text-danger" asp-validation-for="Email"></span>
        </div>

        <div class="form-group">
            <label class="col-form-label mt-4" asp-for="Username"></label>
            <input type="text" class="form-control" placeholder="User Name" asp-for="Username" id="UserName">
            <span class="text-danger" asp-validation-for="Username"></span>
        </div>

        <div class="form-group">
            <label class="col-form-label mt-4" asp-for="Password"></label> 
            <input type="password" class="form-control" placeholder="Password" asp-for="Password" id="Password">
            <span class="text-danger" asp-validation-for="Password"></span>
        </div>

        <div class="form-group">
            <label class="col-form-label mt-4" asp-for="ConfirmPassword"></label>
            <input type="password" class="form-control" placeholder="Confirm Password" asp-for="ConfirmPassword" id="Confirmpassword">
            <span class="text-danger" asp-validation-for="ConfirmPassword"></span>
            </div>

            @if(TempData["msg"]!=null){
                <div class="form-group">
                    @TempData["msg"]
                </div>
            }
            <br />
           
                <button type="submit" class="btn btn-success">Sign up</button>
                <a class="btn btn-light" href="/UserAuthentication/Login"> Login </a>
            </form>
           
        </div>
    </div>
</div>



